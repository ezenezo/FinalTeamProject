<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.ClubDAO">

	<select id="list" resultType="com.myweb.www.domain.ClubVO">
		select * from club
		<include refid="search"></include>
		order by club_cd desc limit #{pageStart}, #{qty}
	</select>
	<select id="totalCount" resultType="int">
		select count(*) from club
		<include refid="search"></include>
	</select>

	<select id="selectClist"
		resultType="com.myweb.www.domain.ClubVO">
		select c.club_cd, c.club_nm from club c right join member m on m.club_cd = c.club_cd
		<include refid="search"></include>
		limit #{pageStart}, #{qty}
	</select>

	<sql id="search">
		<if test="type != null">
			<trim prefix="where" prefixOverrides="or">
				<foreach collection="typeToArray" item="typed">
					<trim prefix="or">
						<choose>
							<when test="typed =='n'.toString()">
								emp_nm like concat('%',#{keyword},'%')
							</when>
							<when test="typed =='i'.toString()">
								id like concat('%',#{keyword},'%')
							</when>
							<when test="typed =='a'.toString()">
								addr like concat('%',#{keyword},'%')
							</when>
							<when test="typed =='d'.toString()">
								dep_cd like concat('%',#{keyword},'%')
							</when>
							<when test="typed =='c'.toString()">
								club_cd like concat('%',#{keyword},'%')
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>

</mapper>